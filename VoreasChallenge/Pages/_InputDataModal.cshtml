@{
}

@model Models.InputData
<!-- Modal -->
<div class="modal fade" id="add-contact" tabindex="-1" role="dialog" aria-labelledby="addContactLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="addContactLabel">データ入力</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">×</span>
				</button>
			</div>
			<div class="modal-body">
				<form asp-page-handler="InputDataModal">
					<input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />

					<div class="row mb-3">
						<label asp-for="Id" class="col-sm-2 col-form-label col-form-label-sm"></label>
						<div class="col-sm-7">
							<div class="row">
								<input asp-for="Id" class="col-sm-7 form-control-sm" />
								<span asp-validation-for="Id" class="col-sm-7 text-danger"></span>
							</div>
						</div>
						<button type="button" class="btn btn-primary">検索</button>
					</div>

					<!--個人情報-->
					<div class="row mb-3">
						<label asp-for="Name" class="col-sm-2 col-form-label col-form-label-sm"></label>
						<div class="col-sm-7">
							<div class="row">
								<input asp-for="Name" class="col-sm-7 form-control-sm"/>
								<span asp-validation-for="Name" class="col-sm-7 text-danger"></span>
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label asp-for="SportsType" class="col-sm-2 col-form-label col-form-label-sm"></label>
						<div class="col-sm-7">
							<div class="row">
								<select asp-for="SportsType" asp-items="@Model.SportsTypeSelect" class="col-sm-7 form-control-sm">
									<option value="">-- 種目選択 --</option>
								</select>
								<span asp-validation-for="SportsType" class="col-sm-7 text-danger"></span>
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label asp-for="MeasureDay" class="col-sm-2 col-form-label col-form-label-sm"></label>
						<div class="col-sm-7">
							<div class="row">
								<input asp-for="MeasureDay" class="col-sm-7 form-control-sm"/>
								<span asp-validation-for="MeasureDay" class="col-sm-7 text-danger"></span>
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label asp-for="Grade" class="col-sm-2 col-form-label col-form-label-sm"></label>
						<div class="col-sm-7">
							<div class="row">
								<select asp-for="Grade" asp-items="@Model.GradeSelect" class="col-sm-7 form-control-sm">
									<option value="">-- 学年選択 --</option>
								</select>
								<span asp-validation-for="Grade" class="col-sm-7 text-danger"></span>
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label asp-for="Sex" class="col-sm-2 col-form-label col-form-label-sm"></label>
						<div class="col-sm-7">
							<div class="row">
								<select asp-for="Sex" asp-items="@Model.SexSelect" class="col-sm-7 form-control-sm">
									<option value="">-- 性別選択 --</option>
								</select>
								<span asp-validation-for="Sex" class="col-sm-7 text-danger"></span>
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label asp-for="BirthDay" class="col-sm-2 col-form-label col-form-label-sm"></label>
						<div class="col-sm-7">
							<div class="row">
								<input asp-for="BirthDay" class="col-sm-7 form-control-sm"/>
								<span asp-validation-for="BirthDay" class="col-sm-7 text-danger"></span>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<div class="row mb-sm-1 input_fild00">
								<label class="col-sm-3 col-form-label col-form-label-sm"><b>体格情報</b></label>
							</div>
							<div class="col input_fild10">
								<!--体格情報-->
								<div class="row mb-3 input_fild20">
									<label asp-for="Height" class="col-sm-3 col-form-label col-form-label-sm"></label>
									<div class="col-sm-8">
										<div class="row">
											<input asp-for="Height" class="col-sm-8 form-control-sm" /><p>&ensp;cm</p>
											<span asp-validation-for="Height" class="col-sm-8 text-danger"></span>
										</div>
									</div>
								</div>
								<div class="row mb-3">
									<label asp-for="ShittingHeight" class="col-sm-3 col-form-label col-form-label-sm"></label>
									<div class="col-sm-8">
										<div class="row">
											<input asp-for="ShittingHeight" class="col-sm-8 form-control-sm" /><p>&ensp;cm</p>
											<span asp-validation-for="ShittingHeight" class="col-sm-8 text-danger"></span>
										</div>
									</div>
								</div>
								<div class="row mb-3">
									<label asp-for="LowerLimbLength" class="col-sm-3 col-form-label col-form-label-sm"></label>
									<div class="col-sm-8">
										<div class="row">
											<input asp-for="LowerLimbLength" class="col-sm-8 form-control-sm" /><p>&ensp;cm</p>
											<span asp-validation-for="LowerLimbLength" class="col-sm-8 text-danger"></span>
										</div>
									</div>
								</div>
								<div class="row mb-3">
									<label asp-for="Weight" class="col-sm-3 col-form-label col-form-label-sm"></label>
									<div class="col-sm-8">
										<div class="row">
											<input asp-for="Weight" class="col-sm-8 form-control-sm" /><p>&ensp;kg</p>
											<span asp-validation-for="Weight" class="col-sm-8 text-danger"></span>
										</div>
									</div>
								</div>
								<div class="row mb-3">
									<label asp-for="BodyFat" class="col-sm-3 col-form-label col-form-label-sm"></label>
									<div class="col-sm-8">
										<div class="row">
											<input asp-for="BodyFat" class="col-sm-8 form-control-sm" /><p>&ensp;%</p>
											<span asp-validation-for="BodyFat" class="col-sm-8 text-danger"></span>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="col">
							<div class="row mb-sm-1 input_fild00">
								<label class="col-sm-3 col-form-label col-form-label-sm"><b>計測情報</b></label>
							</div>
							<div class="col input_fild11">
								<!--計測情報-->
								<div class="row mb-3 input_fild20">
									<label asp-for="Run20m" class="col-sm-4 col-form-label col-form-label-sm"></label>
									<div class="col-sm-8">
										<div class="row">
											<input asp-for="Run20m" class="col-sm-8 form-control-sm" /><p>&ensp;秒</p>
											<span asp-validation-for="Run20m" class="col-sm-8 text-danger"></span>
										</div>
									</div>
								</div>
								<div class="row mb-3">
									<label asp-for="ProAgility" class="col-sm-4 col-form-label col-form-label-sm"></label>
									<div class="col-sm-8">
										<div class="row">
											<input asp-for="ProAgility" class="col-sm-8 form-control-sm" /><p>&ensp;秒</p>
											<span asp-validation-for="ProAgility" class="col-sm-8 text-danger"></span>
										</div>
									</div>
								</div>
								<div class="row mb-3">
									<label asp-for="StandJump" class="col-sm-4 col-form-label col-form-label-sm"></label>
									<div class="col-sm-8">
										<div class="row">
											<input asp-for="StandJump" class="col-sm-8 form-control-sm" /><p>&ensp;cm</p>
											<span asp-validation-for="StandJump" class="col-sm-8 text-danger"></span>
										</div>
									</div>
								</div>
								<div class="row mb-3">
									<label asp-for="RepetJump" class="col-sm-4 col-form-label col-form-label-sm"></label>
									<div class="col-sm-8">
										<div class="row">
											<input asp-for="RepetJump" class="col-sm-8 form-control-sm" /><p>&ensp;回</p>
											<span asp-validation-for="RepetJump" class="col-sm-8 text-danger"></span>
										</div>
									</div>
								</div>
								<div class="row mb-3">
									<label asp-for="VerticalJump" class="col-sm-4 col-form-label col-form-label-sm"></label>
									<div class="col-sm-8">
										<div class="row">
											<input asp-for="VerticalJump" class="col-sm-8 form-control-sm" /><p>&ensp;cm</p>
											<span asp-validation-for="VerticalJump" class="col-sm-8 text-danger"></span>
										</div>
									</div>
								</div>
								<div class="row mb-3">
									<label asp-for="GCTime" class="col-sm-4 col-form-label col-form-label-sm"></label>
									<div class="col-sm-8">
										<div class="row">
											<input asp-for="GCTime" class="col-sm-8 form-control-sm" /><p>&ensp;秒</p>
											<span asp-validation-for="GCTime" class="col-sm-8 text-danger"></span>
										</div>
									</div>
								</div>
								<div class="row mb-3">
									<label asp-for="JumpHeight" class="col-sm-4 col-form-label col-form-label-sm"></label>
									<div class="col-sm-8">
										<div class="row">
											<input asp-for="JumpHeight" class="col-sm-8 form-control-sm" /><p>&ensp;cm</p>
											<span asp-validation-for="JumpHeight" class="col-sm-8 text-danger"></span>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
				<button type="button" class="btn btn-primary" data-save="modal">保存</button>
			</div>
		</div>
	</div>
</div>
